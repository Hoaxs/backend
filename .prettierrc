{
    "semi": false,
    "overrides": [
        {
            "files": "*.test.js",
            "options": {
                "semi": true
            }
        },
        {
            "files": ["*.html", "legacy/**/*.js"],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": ".prettierrc",
            "options": { "parser": "json" }
        }
    ],
    "trailingComma": "es5",
    "tabWidth": 4,
    "singleQuote": true
}
